<UserControl x:Class="Intervallo.UI.WaveScaler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Intervallo.UI"
             mc:Ignorable="d"
             d:DesignHeight="70"
             d:DesignWidth="400"
             MouseDown="WaveScaler_MouseDown"
             MouseMove="WaveScaler_MouseMove"
             MouseUp="WaveScaler_MouseUp">
    <Grid Cursor="SizeAll">
        <Rectangle Stroke="LightGray"/>
        <local:WaveCanvas x:Name="WaveCanvas" Margin="0,0,0,0" Wave="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:WaveScaler}}, Path=Wave }" />
        <Grid Name="Scaler">
            <Rectangle Fill="#7FB0FF92" Stroke="Gray"/>
            <Rectangle Name="RightScale" HorizontalAlignment="Right" Width="10" Cursor="SizeWE" Fill="Transparent"/>
            <Rectangle Name="LeftScale" HorizontalAlignment="Left" Width="10" Cursor="SizeWE" Fill="Transparent"/>
        </Grid>
    </Grid>
</UserControl>
